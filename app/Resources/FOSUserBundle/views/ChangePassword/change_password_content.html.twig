<h2>Change Password</h2>

<div class="clear"></div> <!-- End .clear -->
<div class="content-box"><!-- Start Content Box -->
    <div class="content-box-header">

        <div class="clear"></div>

    </div> <!-- End .content-box-header -->

    <div class="content-box-content">

        {% for flashMessage in app.session.flashbag.get('notice') %}
            <div class="notification success png_bg">
                <div>{{ flashMessage }}</div>
            </div>
        {% endfor %}

        {% trans_default_domain 'FOSUserBundle' %}

        {{ form_start(form, { 'action': path('fos_user_change_password'), 'attr': { 'class': 'fos_user_change_password' } }) }}
        <div id="fos_user_profile_form">
            <p>
                {{ form_label(form.current_password, 'form.current_password') }}
                {{ form_widget(form.current_password, { 'attr': {'class': 'text-input small-input validate[required]'} }) }}
                {{ form_errors(form.current_password) }}
            </p>
            <p>
                {{ form_label(form.plainPassword.first, 'form.new_password') }}
                {{ form_widget(form.plainPassword.first, { 'attr': {'class': 'text-input small-input validate[required]'} }) }}
                {{ form_errors(form.plainPassword.first) }}
            </p>
            <p>
                {{ form_label(form.plainPassword.second, 'form.new_password_confirmation') }}
                {{ form_widget(form.plainPassword.second, { 'attr': {'class': 'text-input small-input validate[required]'} }) }}
            </p>
            <div>
                <input type="submit" class="button" value="{{ 'change_password.submit'|trans }}" />
            </div>
            {{ form_rest(form) }}
        </div>
        {{ form_end(form) }}
    </div> <!-- End .content-box-content -->
</div> <!-- End .content-box -->